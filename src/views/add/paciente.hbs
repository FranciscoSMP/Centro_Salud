<h2 class="text-center my-4">Añadir Paciente</h2>
<form action="/paciente/guardar/paciente" method="POST" class="container">
    <div class="row">
        <div class="col-md-2 mb-3">
            <label for="DPI">DPI del Paciente</label>
            <input type="text" name="DPI" id="DPI" class="form-control" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Primer_nombre">Primer Nombre</label>
            <input type="text" name="Primer_nombre" id="Primer_nombre" class="form-control" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Segundo_nombre">Segundo Nombre</label>
            <input type="text" name="Segundo_nombre" id="Segundo_nombre" class="form-control">
        </div>
        <div class="col-md-2 mb-3">
            <label for="Tercer_nombre">Tercer Nombre</label>
            <input type="text" name="Tercer_nombre" id="Tercer_nombre" class="form-control">
        </div>
        <div class="col-md-2 mb-3">
            <label for="Primer_apellido">Primer Apellido</label>
            <input type="text" name="Primer_apellido" id="Primer_apellido" class="form-control" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Segundo_apellido">Segundo Apellido</label>
            <input type="text" name="Segundo_apellido" id="Segundo_apellido" class="form-control">
        </div>
        <div class="col-md-2 mb-3">
            <label for="Fecha_nacimiento">Fecha de Nacimiento (Y-M-D)</label>
            <input type="text" name="Fecha_nacimiento" id="Fecha_nacimiento" class="form-control" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Telefono">Teléfono</label>
            <input type="text" name="Telefono" id="Telefono" class="form-control" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="IGSS">IGSS</label>
            <input type="text" name="IGSS" id="IGSS" class="form-control" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Genero">Género</label>
            <input type="text" name="Genero" id="Genero" class="form-control" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Escolaridad">Id Escolaridad</label>
            <input type="text" name="Id_Escolaridad" id="Id_Escolaridad" class="form-control" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Comunidad_Linguistica">Id Comunidad</label>
            <input type="text" name="Id_Comunidad_Linguistica" id="Id_Comunidad_Linguistica" class="form-control" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Profesion">Id Profesión</label>
            <input type="text" name="Id_Profesion" id="Id_Profesion" class="form-control" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Disapacidad">Id Discapacidad</label>
            <input type="text" name="Id_Disapacidad" id="Id_Disapacidad" class="form-control" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Control">Id Control</label>
            <input type="text" name="Id_Control" id="Id_Control" class="form-control" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Pueblo">Id Pueblo</label>
            <input type="text" name="Id_Pueblo" id="Id_Pueblo" class="form-control" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Municipio">Id Municipio</label>
            <input type="text" name="Id_Municipio" id="Id_Municipio" class="form-control" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Departamento">Id Departamento</label>
            <input type="text" name="Id_Departamento" id="Id_Departamento" class="form-control" required>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Añadir</button>
    </div>
</form>
