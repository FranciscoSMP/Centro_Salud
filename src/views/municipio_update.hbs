<h2 class="text-center my-4">Actualizar Municipio</h2>
<form action="/municipio/actualizar/municipio" method="POST" class="container form-General">
    <input type="hidden" name="Id_Municipio" value="{{municipio.Id_Municipio}}" />
    <div class="form-group mb-3">
        <label for="Nombre_Municipio"  class="form-label">Nombre de la Comunidad</label>
        <input type="text" name="Nombre_Municipio" id="Nombre_Municipio" class="form-control" value="{{municipio.Nombre_Municipio}}" required>
        <label for="Id_Departamento"  class="form-label">Nombre de la Comunidad</label>
        <input type="text" name="Id_Departamento" id="Id_Departamento" class="form-control" value="{{municipio.Id_Departamento}}" required>
    </div>
    <div class="text-center">
    <button type="submit" class="btn btn-primary">Actualizar</button>
    </div>
</form> 
