<h2>Actualizar Paciente</h2>
<form action="/paciente/actualizar/paciente" method="POST">
    <input type="hidden" name="DPI" value="{{paciente.DPI}}" />
    <div class="form-group">
        <label for="Primer_nombre">Primer Nombre</label>
        <input type="text" name="Primer_nombre" id="Primer_nombre" value="{{paciente.Primer_nombre}}" required>
        <label for="Segundo_nombre">Segundo Nombre</label>
        <input type="text" name="Segundo_nombre" id="Segundo_nombre" value="{{paciente.Segundo_nombre}}" required>
        <label for="Tercer_nombre">Tercer Nombre</label>
        <input type="text" name="Tercer_nombre" id="Tercer_nombre" value="{{paciente.Tercer_nombre}}">
        <label for="Primer_apellido">Primer Apellido</label>
        <input type="text" name="Primer_apellido" id="Primer_apellido" value="{{paciente.Primer_apellido}}" required>
        <label for="Segundo_apellido">Segundo Apellido</label>
        <input type="text" name="Segundo_apellido" id="Segundo_apellido" value="{{paciente.Segundo_apellido}}" required>
        <label for="Fecha_nacimiento">Fecha de Nacimiento</label>
        <input type="date" name="Fecha_nacimiento" id="Fecha_nacimiento" value="{{paciente.Fecha_nacimiento}}" required>
        <label for="Telefono">Telefono</label>
        <input type="text" name="Telefono" id="Telefono" value="{{paciente.Telefono}}" required>
        <label for="IGSS">IGSS</label>
        <input type="text" name="IGSS" id="IGSS" value="{{paciente.IGSS}}" required>
        <label for="Genero">Genero</label>
        <input type="text" name="Genero" id="Genero" value="{{paciente.Genero}}" required>
        <label for="Id_Escolaridad">ID Escolaridad</label>
        <input type="text" name="Id_Escolaridad" id="Id_Escolaridad" value="{{paciente.Id_Escolaridad}}" required>
        <label for="Id_Comunidad_Linguistica">ID Comunidad Linguistica</label>
        <input type="text" name="Id_Comunidad_Linguistica" id="Id_Comunidad_Linguistica" value="{{paciente.Id_Comunidad_Linguistica}}" required>
        <label for="Id_Profesion">ID Profesion</label>
        <input type="text" name="Id_Profesion" id="Id_Profesion" value="{{paciente.Id_Profesion}}" required>
        <label for="Id_Disapacidad">ID Discapacidad</label>
        <input type="text" name="Id_Disapacidad" id="Id_Disapacidad" value="{{paciente.Id_Disapacidad}}" required>
        <label for="Id_Control">ID Control</label>
        <input type="text" name="Id_Control" id="Id_Control" value="{{paciente.Id_Control}}" required>
        <label for="Id_Pueblo">ID Pueblo</label>
        <input type="text" name="Id_Pueblo" id="Id_Pueblo" value="{{paciente.Id_Pueblo}}" required>
        <label for="Id_Municipio">ID Municipio</label>
        <input type="text" name="Id_Municipio" id="Id_Municipio" value="{{paciente.Id_Municipio}}" required>
        <label for="Id_Departamento">ID Departamento</label>
        <input type="text" name="Id_Departamento" id="Id_Departamento" value="{{paciente.Id_Departamento}}" required>
    </div>
    <button type="submit">Actualizar</button>
</form>