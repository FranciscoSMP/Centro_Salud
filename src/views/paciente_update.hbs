<h2 class="text-center my-4">Actualizar Paciente</h2>
<form action="/paciente/actualizar/paciente" method="POST" class="container">
    <input type="hidden" name="DPI" value="{{paciente.DPI}}" />
    <div class="row">
        <div class="col-md-2 mb-3">
            <label for="Primer_nombre">Primer Nombre</label>
            <input type="text" name="Primer_nombre" id="Primer_nombre" class="form-control" value="{{paciente.Primer_nombre}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Segundo_nombre">Segundo Nombre</label>
            <input type="text" name="Segundo_nombre" id="Segundo_nombre" class="form-control" value="{{paciente.Segundo_nombre}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Tercer_nombre">Tercer Nombre Opcional</label>
            <input type="text" name="Tercer_nombre" id="Tercer_nombre" class="form-control" value="{{paciente.Tercer_nombre}}">
        </div>
        <div class="col-md-2 mb-3">
            <label for="Primer_apellido">Primer Apellido</label>
            <input type="text" name="Primer_apellido" id="Primer_apellido" class="form-control" value="{{paciente.Primer_apellido}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Segundo_apellido">Segundo Apellido</label>
            <input type="text" name="Segundo_apellido" id="Segundo_apellido" class="form-control" value="{{paciente.Segundo_apellido}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Fecha_nacimiento">Fecha de Nacimiento</label>
            <input type="date" name="Fecha_nacimiento" id="Fecha_nacimiento" class="form-control" value="{{paciente.Fecha_nacimiento}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Telefono">Teléfono</label>
            <input type="text" name="Telefono" id="Telefono" class="form-control" value="{{paciente.Telefono}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="IGSS">IGSS</label>
            <input type="text" name="IGSS" id="IGSS" class="form-control" value="{{paciente.IGSS}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Genero">Género</label>
            <input type="text" name="Genero" id="Genero" class="form-control" value="{{paciente.Genero}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Escolaridad">ID Escolaridad</label>
            <input type="text" name="Id_Escolaridad" id="Id_Escolaridad" class="form-control" value="{{paciente.Id_Escolaridad}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Comunidad_Linguistica">ID Comunidad Lingüística</label>
            <input type="text" name="Id_Comunidad_Linguistica" id="Id_Comunidad_Linguistica" class="form-control" value="{{paciente.Id_Comunidad_Linguistica}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Profesion">ID Profesión</label>
            <input type="text" name="Id_Profesion" id="Id_Profesion" class="form-control" value="{{paciente.Id_Profesion}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Disapacidad">ID Discapacidad</label>
            <input type="text" name="Id_Disapacidad" id="Id_Disapacidad" class="form-control" value="{{paciente.Id_Disapacidad}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Control">ID Control</label>
            <input type="text" name="Id_Control" id="Id_Control" class="form-control" value="{{paciente.Id_Control}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Pueblo">ID Pueblo</label>
            <input type="text" name="Id_Pueblo" id="Id_Pueblo" class="form-control" value="{{paciente.Id_Pueblo}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Municipio">ID Municipio</label>
            <input type="text" name="Id_Municipio" id="Id_Municipio" class="form-control" value="{{paciente.Id_Municipio}}" required>
        </div>
        <div class="col-md-2 mb-3">
            <label for="Id_Departamento">ID Departamento</label>
            <input type="text" name="Id_Departamento" id="Id_Departamento" class="form-control" value="{{paciente.Id_Departamento}}" required>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Actualizar</button>
    </div>
</form>
