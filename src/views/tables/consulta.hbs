{{#if success_msg}}
<div id="success-alert" class="alert-overlay alert-center fade-out">
    <div class="col-md-2">
        <div class="alert alert-success text-center">{{success_msg}}</div>
    </div>
</div>
{{/if}}
<div class="container my-4">
<h2 class="text-center mb-4">Lista de Consultas</h2>
<table class="table table-hover table-bordered">
    <thead class="thead-dark"> 
        <tr>
            <th scope="col">ID Consulta</th>
            <th scope="col">Fecha Consulta</th>
            <th scope="col">DPI Paciente</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each consultas}}
        <tr>
            <td>{{this.Id_Consulta}}</td>
            <td>{{this.Fecha_Consulta}}</td>
            <td>{{this.DPI_Paciente}}</td>
            <td>
                <a href="/consulta/editar/{{this.Id_Consulta}}" class="btn btn-sm btn-warning me-2">Editar</a>
                <form action="/consulta/eliminar/{{this.Id_Consulta}}" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger"
                        onclick="return confirm('¿Está seguro de que desea eliminar esta consulta?');">Eliminar</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>