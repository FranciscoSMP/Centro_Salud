        <tr>
            <th>ID</th>
            <th>Nombre del Departamento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each departamentos}}
        <tr>
            <td>{{this.Id_Departamento}}</td> <!-- AsegÃºrate de que los campos coincidan con la base de datos -->
            <td>{{this.Nombre_Departamento}}</td>
