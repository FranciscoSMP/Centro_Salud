{{#if success_msg}}
<div id="success-alert" class="alert-overlay alert-center fade-out">
    <div class="col-md-2">
        <div class="alert alert-success text-center">{{success_msg}}</div>
    </div>
</div>
{{/if}}
<div class="container my-4">
<h2 class="text-center mb-4">Lista de Relaciones Paciente Consulta</h2>
<table class="table table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">DPI Paciente</th>
            <th scope="col">ID Consulta</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each pacienteConsulta}}
        <tr>
            <td>{{this.Paciente_Consulta}}</td> <!-- Asegúrate de que los campos coincidan con la base de datos -->
            <td>{{this.DPI_Paciente}}</td>
            <td>{{this.Id_Consulta}}</td>
            <td>
                <a href="/paciente_consulta/editar/{{this.Paciente_Consulta}}" class="btn btn-sm btn-warning me-2">Editar</a>
                <form action="/paciente_consulta/eliminar/{{this.Paciente_Consulta}}" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger"
                        onclick="return confirm('¿Está seguro de que desea eliminar la relación paciente - consulta?');">Eliminar</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>