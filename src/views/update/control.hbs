{{#ifCond user.Id_Rol '==' 1}}
<h2 class="text-center my-4">Actualizar Control</h2>
<form action="/control/actualizar" method="POST" class="container form-General">
    <input type="hidden" name="Id_Control" value="{{control.Id_Control}}" />
    <div class="form-group mb-3">
        <label for="Tipo_Control" class="form-label" >Tipo del Control</label>
        <input type="text" name="Tipo_Control" id="Tipo_Control" class="form-control" value="{{control.Tipo_Control}}" required>
    </div>
    <div class="text-center">
    <button type="submit" class="btn btn-primary">Actualizar</button>
    </div>
</form> 
{{else ifCond user.Id_Rol '==' 2}}
<h2 class="text-center my-4">Acceso Denegado</h2>
<div class="container acceso-denegado">
    <p class="text-center">No tiene permisos para acceder a esta p√°gina.</p>
    <div class="text-center mt-4">
        <a href="/dashboard" class="btn btn-danger">Volver al Inicio</a>
    </div>
</div>
{{/ifCond}}
